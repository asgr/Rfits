PKG_CPPFLAGS = -Icfitsio $(SHLIB_OPENMP_CXXFLAGS)
PKG_LIBS = cfitsio/.libs/libcfitsio.a $(SHLIB_OPENMP_CXXFLAGS)

.PHONY: all cfitsio clean shlib-clean

all: $(SHLIB)
$(SHLIB): cfitsio

cfitsio:
	(cd cfitsio && $(MAKE))

shlib-clean: clean

clean:
	(cd cfitsio; $(MAKE) clean)

OBJECTS = RcppExports.o Rfits.o
